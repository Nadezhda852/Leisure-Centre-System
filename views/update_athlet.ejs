<!--include header-->
<%-include('include/_header')%>
<!--/include header-->

 <!-- Main Section-->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-felx-justify-between">
           <div class="filter">
               <a href="/"><i class = 'fas fa-chevron-circle-left'></i>All Athlets</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Athlet</h2>
            <span class="text-light">Please, use the form to update your account</span>
        </div>
        
        <!--add user form-->  
        <form method="POST" id ="update_athlet">    
            <div class="new_athlet">
                <div class="form-group">
                    <label for="name" class="text-light"></label>Name</label>
                    <input type="hidden" name="id" value="<%= athlet._id %>">
                    <input type="text" name="name" value="<%= athlet.name %>" placeholder="Anna Jones">
                </div>
                <div class="form-group">
                   <label for="Email" class="text-light"></label>Email</label>
                   <input type="text" name="email" value="<%= athlet.email %>" placeholder="example@yahoo.com">
               </div>   
               <div class="form-group">
                   <label for="gender" class="text-light"></label>Gender</label>
                   <div class="radio inline">
                       <input type="radio" id="radio-2" name="gender" value="Female"<%= athlet.gender=='Female'?'checked': '' %>>
                       <label for="radio-2" class="radio-label">Female</label>
                   </div>
                   <div class="radio inline">
                       <input type="radio"  id="radio-3" name="gender" value="Male"<%= athlet.gender=='Male'?'checked': '' %>>
                       <label for="radio-3" class="radio-label">Male</label>
                   </div>
               </div>
               <div class="form-group">
                   <label for="status" class="text-light"></label>Status</label>
                   <div class="radio inline">
                       <input type="radio"  id="radio-4" name="status" value="Active"<%= athlet.status=='Active'?'checked': '' %>>
                       <label for="radio-4" class="radio-label">Active</label>
                   </div>
                   <div class="radio inline">
                       <input type="radio" id="radio-5" name="status" value="Inactive"<%= athlet.status=='Inactive'?'checked': '' %>>
                       <label for="radio-5" class="radio-label">Inactive</label>
                   </div>
               </div>
        
               <div class="form-group">
                   <button type="submit" class="btn text-dark update">Submit</button>
               </div>
        </div>
        </form>

    </div>
</main>
<!-- /Main Section-->

<!--include footer-->
<%-include('include/_footer')%>
<!--/include footer-->